<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ImageButton" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>

    <style name="TextButton" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">70dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:autoLink">all</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColorLink">#553322</item>
        <item name="android:background">@android:color/transparent</item>
    </style>


    <style name="AdressButton" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">70dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#553322</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Tailor" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#553322</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:textSize">33sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginTop">270dp</item>
    </style>
</resources>
